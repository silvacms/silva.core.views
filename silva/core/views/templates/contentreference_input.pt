<tal:lookup>
  <input class="button transporter" type="button" onclick="#"
         value="get reference..." name="#.button" style="margin-left: 0pt;"
         tal:attributes="name string:${view/name}.button;
                         onclick view/onclick" />
  <input class="store" type="text" size="20" maxlength="" value="#" name="#"
         tal:attributes="name view/name;
                         value view/value" />
  <tal:condition tal:define="content_url view/current_url"
                 tal:condition="content_url">
    (<a href="#" tal:attributes="href content_url;">
      Current content</a>)
  </tal:condition>
</tal:lookup>
