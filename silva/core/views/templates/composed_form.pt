<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
      lang="en"
      xml:lang="en"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="vein view/label;
                  active_tab view/tab_name;
                  maintitlecolspan string:1"
      i18n:domain="silva">

<metal:use-macro use-macro="here/macro_index/macros/master">

  <metal:middleground metal:fill-slot="middleground">
    <tal:replace tal:replace="structure provider:smimiddlegroundmanager" />
  </metal:middleground>

  <metal:fill-editor-slot fill-slot="main">

    <table class="columns">
        <tbody>
          <tr>
            <td class="left">
              <metal:use-macro use-macro="here/macro_vein_navigation/macros/vein">
                <metal:fill-slot fill-slot="sidebar">
                  <tal:block
                    tal:define="template_id template/id"
                    tal:replace="structure python: here.service_sidebar.render(model, template_id, vein)" />
                </metal:fill-slot>
              </metal:use-macro>
            </td>
            <td class="main">

              <table class="listing">
                <thead>
                  <tr tal:condition="view/label">
                    <td class="top">
                      <h2 tal:attributes="title string:id: ${model/id}">
                        <img tal:replace="structure icon" />
                        <tal:inline tal:content="view/label"
                                    i18n:translate="">table label</tal:inline>
                      </h2>
                    </td>
                  </tr>
                  <tr class="odd"
                      tal:condition="view/description | nothing">
                    <td class="designator"
                        tal:content="view/description">
                    </td>
                  </tr>
                </thead>
                <tbody>
                  <tr class="top-controls"
                      tal:define="formlabel view/formlabel | nothing"
                      tal:condition="formlabel">
                    <td>
                      <h3 tal:content="formlabel"
                          i18n:translate="">
                        form label
                      </h3>
                    </td>
                  </tr>
                </tbody>
                <tfoot tal:condition="view/actions | nothing">
                  <tr class="controls">
                    <td>
                      <tal:control tal:repeat="action view/actions/values">
                        <input type="submit" tal:replace="structure action/render" />
                      </tal:control>
                    </td>
                  </tr>
                </tfoot>
              </table>

              <tal:repeat tal:repeat="form view/subforms"
                          tal:replace="structure form/render">
              </tal:repeat>

            </td>
            <tal:portlets tal:replace="structure provider:smiportletmanager" />
          </tr>
        </tbody>
      </table>
    </metal:fill-editor-slot>

  </metal:use-macro>

</html>
