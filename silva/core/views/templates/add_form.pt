<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
      lang="en"
      xml:lang="en"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="vein string:add;
                  active_tab view/active_tab;"
      i18n:domain="silva">

  <metal:use-macro metal:use-macro="here/macro_index/macros/master">

    <metal:resources metal:fill-slot="style">
      <tal:resource tal:replace="structure provider:resources" />
    </metal:resources>

    <metal:main metal:fill-slot="main">
      <script type="text/javascript"
              tal:define="metatype request/meta_type;
                          focusfield python:metatype == 'Silva Image' and 'form.widgets.title' or 'form.widgets.id'"
              tal:content="structure python:here.focus_editor(focusfield)"              />
      <div class="focus-rectangle">
        <form method="post"
              action="add_object"
              name="focusbox"
              enctype="multipart/form-data"
              tal:define="meta_type request/meta_type">
          <input type="hidden" name="meta_type"
                 tal:attributes="value meta_type" />
          <input name="add_object_position" type="hidden"
                 tal:condition="request/add_object_position|nothing"
                 tal:attributes="value request/add_object_position|nothing" />
          <table class="listing">
            <thead>
              <tr>
                <td class="top"
                    colspan="2">
                  <h2>
                    <img tal:replace="structure python:here.render_icon_by_meta_type(meta_type)" />
                    <tal:translate i18n:translate="">
                      create
                      <tal:block replace="meta_type"
                                 i18n:name="TOC_or_meta_type" />
                    </tal:translate>
                  </h2>
                </td>
              </tr>
              <tr>
                <th style="width:33%"
                    i18n:translate="">
                  aspect
                </th>
                <th i18n:translate="">
                  content
                </th>
              </tr>
            </thead>

            <tbody>
              <metal:widgets metal:use-macro="view/form_macros/widgets" />
            </tbody>

            <tfoot>
              <tr>
                <th i18n:translate="">
                  * required
                </th>
                <th>&nbsp;</th>
              </tr>
              <metal:widgets metal:use-macro="view/form_macros/actions" />
            </tfoot>
          </table>
        </form>
      </div>
    </metal:main>

  </metal:use-macro>

</html>
