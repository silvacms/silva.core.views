<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
      lang="en"
      xml:lang="en"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="vein view/vein;
                  active_tab view/active_tab;
                  maintitlecolspan string:1"
      i18n:domain="silva">

<metal:use-macro use-macro="here/macro_index/macros/master">

  <metal:fill-style-slot fill-slot="style">
    <style type="text/css">
table.listing {
  margin:0;
}
table.listing th.cell0 {
width:5%;
}
#crud-edit-form-buttons-delete {
  color: #fdeaea;
  background-color: #752e2f;
}
input[value="Add"], input[value="Delete"] {
  text-transform:lowercase;
}
ul.batch-navigation {
  padding-left:0;
}
ul.batch-navigation li {
  display:inline;
}
ul.batch-navigation li a {
  display:inline;
  padding:0 0.5em;
}
    </style>
  </metal:fill-style-slot>

  <metal:block metal:fill-slot="middleground">
    <tal:buttons tal:replace="structure model/@@tab_access_extra" />
  </metal:block>

  <metal:fill-editor-slot fill-slot="main">

    <table class="columns columns3">
        <tbody>
          <tr>
            <td class="left">
              <metal:use-macro use-macro="here/macro_vein_navigation/macros/vein">
                <metal:fill-slot fill-slot="sidebar">
                  <tal:block
                    tal:define="template_id template/id"
                    tal:replace="structure python: here.service_sidebar.render(model, template_id, vein)" />
                </metal:fill-slot>
              </metal:use-macro>
            </td>
            <td class="main">

              <table class="listing">
                <thead>
                  <tr tal:condition="realview/label">
                    <td class="top">
                      <h2 tal:attributes="title string:id: ${model/id}">
                        <img tal:replace="structure icon" />
                        <tal:inline tal:content="realview/label"
                                    i18n:translate="">table label</tal:inline>
                      </h2>
                    </td>
                  </tr>
                  <tr class="odd"
                      tal:condition="realview/description">
                    <td class="designator"
                        tal:content="realview/description">
                    </td>
                  </tr>
                </thead>
                <tbody>
                  <tr class="top-controls"
                      tal:define="formlabel realview/formlabel | nothing"
                      tal:condition="formlabel">
                    <td>
                      <h3 tal:content="formlabel"
                          i18n:translate="">
                        form label
                      </h3>
                    </td>
                  </tr>
                </tbody>
                <tfoot tal:condition="realview/actions">
                  <tr class="controls">
                    <td>
                      <tal:control tal:repeat="action realview/actions/values">
                        <input type="submit" tal:replace="structure action/render" />
                      </tal:control>
                    </td>
                  </tr>
                </tfoot>
              </table>

              <tal:repeat tal:repeat="form realview/subforms"
                          tal:replace="structure form/render">
              </tal:repeat>

            </td>
            <td class="right">
              <metal:use use-macro="realview/macro_user_lookup_clipboard/macros/clipboard" />
            </td>
          </tr>
        </tbody>
      </table>
    </metal:fill-editor-slot>

  </metal:use-macro>

</html>
