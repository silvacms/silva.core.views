<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
      lang="en"
      xml:lang="en"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="vein                  string:contents;
                  maintitlecolspan      string:1;
                  global vein string:external users;
                  global active_tab string:tab_access;
                  global parent_screen_name string:tab_access"
      i18n:domain="silva">
  
<metal:use-macro use-macro="here/macro_index/macros/master">

<metal:fill-style-slot fill-slot="style">
<style type="text/css">
table.listing td.nestingcell {
  padding:0;
}
div.portalMessage {
  margin: 0;
  border: 1px solid #789;
  border-style: solid none solid;
  padding: 0 0.3em 0.1em;
  color: #555;
  background: #f3f3d9;
}
#crud-edit-form-buttons-delete {
  color: #fdeaea;
  background-color: #752e2f;
}
</style>
</metal:fill-style-slot>

<metal:block metal:fill-slot="middleground">
  <metal:block use-macro="here/macro_middleground/macros/access" />
</metal:block>

    <metal:fill-editor-slot fill-slot="main">

      <table class="columns columns3">
        <tbody>
          <tr>
            <td class="left">
              <metal:use-macro use-macro="here/macro_vein_navigation/macros/vein">
                <metal:fill-slot fill-slot="sidebar">
                  <tal:block 
                     tal:define="template_id template/id"
                     tal:replace="structure python: here.service_sidebar.render(model, template_id, vein)" />
                </metal:fill-slot>
              </metal:use-macro>
            </td>
            <td class="main">

              <table class="listing">
                <thead>
                  <tr tal:condition="view/label">
                    <td class="top"
                      colspan="1">
                      <h2 tal:attributes="title string:id: ${model/id}">
                        <img tal:replace="structure icon" />
                        <tal:inline tal:content="view/label"
                          i18n:translate="">table label</tal:inline>
                      </h2>
                    </td>
                  </tr>
                  <tr class="odd"
                    tal:condition="view/description">
                    <td class="designator"
                      colspan="1"
                      tal:content="view/description">
                    </td>
                  </tr>
                </thead>
              </table>

              <table class="listing">
                <thead>
                  <tr class="top-controls">
                    <td>
                      <h3 tal:content="view/formlabel | default" 
                        i18n:translate="">
                        form label
                      </h3>
                    </td>
                  </tr>
                </thead>
                <tbody>
                  <tr tal:repeat="form view/subforms">
                    <td class="nestingcell"
                      tal:content="structure form/render">
                      feedback and rendered forms appear get inserted
                    </td>
                  </tr>
                </tbody>
                <tfoot>
                  <tr class="controls">
                    <td>
                      <tal:control tal:repeat="action view/actions/values">
                        <input type="submit" tal:replace="structure action/render" />
                      </tal:control>
                    </td>
                  </tr>
                </tfoot>
              </table>

            </td>
            <td class="right">
              <metal:use use-macro="view/macro_user_lookup_clipboard/macros/clipboard">
                <metal:fill fill-slot="clipboard_actions">
                  <input class="button remover"
                    name="lookup_remove_from_selection:method"
                    type="submit"
                    value="remove user"
                    title="remove users from the clipboard: alt-r"
                    accesskey="r"
                    i18n:attributes="value;title"
                 />
                </metal:fill>
              </metal:use>
            </td>
          </tr>
        </tbody>
      </table>
    </metal:fill-editor-slot>

  </metal:use-macro>

</html>
