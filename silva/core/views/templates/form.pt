<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
      lang="en"
      xml:lang="en"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="vein view/vein;
                  active_tab view/active_tab;
                  maintitlecolspan string:2"
      i18n:domain="silva">

  <metal:use-macro use-macro="here/macro_edit/macros/editor">

    <metal:middleground metal:fill-slot="middleground">
      <tal:replace tal:replace="structure provider:smimiddlegroundmanager" />
    </metal:middleground>

    <metal:fill-editor-slot fill-slot="main">

      <table class="columns columns2">
        <tbody>
          <tr>

            <tal:block replace="nothing">
              _____________________ sidebar _____________________
            </tal:block>

            <td class="left">
              <metal:use-macro use-macro="here/macro_vein_navigation/macros/vein">
                <metal:fill-slot fill-slot="sidebar">
                  <tal:block
                     tal:define="template_id view/tab_name"
                     tal:replace="structure python: here.service_sidebar.render(model, template_id, vein)" />
                </metal:fill-slot>
              </metal:use-macro>
            </td>

            <tal:block replace="nothing">
              _____________________ main _____________________
            </tal:block>

            <td class="main">
              <form method="post" name="silvaObjects" action="#"
                    tal:attributes="action template/id">
                <table class="listing"
                       tal:define="have_widgets nocall:view/widgets">
                  <thead>
                    <tal:block replace="nothing">
                      ______________ vein + title row ______________
                    </tal:block>
                    <tr>
                      <td class="top" colspan="2">
                        <metal:use use-macro="here/macro_edit/macros/main-title" />
                      </td>
                    </tr>
                    <tr class="top-controls" tal:condition="view/label">
                      <td colspan="2"> 
                        <h3 tal:content="view/label">label</h3>
                      </td>
                    </tr>
                    <tr class="odd" tal:condition="view/description">
                      <td class="designator" colspan="2"
                          tal:content="view/description">
                      </td>
                    </tr>
                    <tr tal:condition="have_widgets">
                      <th style="width:33%" i18n:translate="">
                        aspect
                      </th>
                      <th i18n:translate="">
                        content
                      </th>
                    </tr>
                  </thead>
                  <tbody tal:condition="have_widgets">
                    <metal:widgets metal:use-macro="view/form_macros/widgets" />
                  </tbody>
                  <tfoot>
                    <tr tal:condition="have_widgets">
                      <th i18n:translate="">
                        * required
                      </th>
                      <th>&nbsp;</th>
                    </tr>
                    <metal:widgets metal:use-macro="view/form_macros/actions" />
                  </tfoot>
                </table>
              </form>
            </td>
          </tr>
        </tbody>
      </table>

    </metal:fill-editor-slot>

  </metal:use-macro>

</html>
